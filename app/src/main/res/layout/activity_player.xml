<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/content_fullscreen"
    tools:context="live.player.edge.com.playerapp.Activities.PlayerActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.bambuser.broadcaster.SurfaceViewWithAutoAR
            android:id="@+id/VideoSurfaceView"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:fitsSystemWindows="true"
            android:layout_centerInParent="true" />
        <TextView android:id="@+id/PlayerStatusTextView"
            android:textColor="@color/colorAccent"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_margin="10dp"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/tv_live_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff1744"
            android:layout_margin="10dp"
            android:background="@drawable/bordered_text"
            android:textSize="18sp"
            android:layout_gravity="end"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:textStyle="bold"
            android:text="● LIVE" />


    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/gradient"
        android:orientation="vertical">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_comments"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:stackFromEnd="true"
            android:requiresFadingEdge="vertical"
            android:layout_gravity="bottom">
        </android.support.v7.widget.RecyclerView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/edt_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bordered_edittext"
                android:hint="Type your comment.."
                android:imeOptions="actionSend"
                android:singleLine="true"
                android:nestedScrollingEnabled="true"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#fff"
                android:textColorHint="#fff" />
        </LinearLayout>

    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
